<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Weiß gefüllt statt grün -->
    <solid android:color="#FFFFFF" />
    
    <!-- Feiner Rahmen in Salbeigrün -->
    <stroke
        android:width="2dp"
        android:color="#B8D4A8" />
    
    <!-- Abgerundete Ecken -->
    <corners android:radius="8dp" />
    
    <!-- Leichter Schatten-Effekt durch Padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
